{
  "manifest_version": 3,
  "name": "ZoneIn Extension",
  "version": "1.0.0",
  "description": "Classifies browsing as productive, neutral, or distracting using static URL rules",
  "permissions": [
    "tabs",
    "storage",
    "windows"
  ],
  "host_permissions": [
    "http://127.0.0.1:17321/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["rules.json"],
      "matches": []
    }
  ]
}
